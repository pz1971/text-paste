<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Text-Paste</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- password prompt -->
    <script type="text/javascript">
        var s = "";
        while (s != "<%= password %>") {
            s = prompt("please enter the password");
            if (s == "<%= password %>") {
                break;
            }
            else {
                alert("Incorrect password-Try again");
            }
        }
    </script>

    <!-- highlight and line number -->
    <link rel="stylesheet" href="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.5.1/build/styles/default.min.css">
    <script src="//cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.5.1/build/highlight.min.js"></script>
    <script
        src="//cdn.jsdelivr.net/npm/highlightjs-line-numbers.js@2.8.0/dist/highlightjs-line-numbers.min.js"></script>
    <script>
        hljs.highlightAll();
        hljs.initLineNumbersOnLoad();
    </script>

    <!-- custom css -->
    <link href="../paste.css" rel="stylesheet">
</head>

<body>
    <button type="button" class="btn btn-outline-dark" onclick="copyTextToClipboard()">Copy Text</button>
    <div>
        <pre>
            <code class="the-text language-<%=text_type%>"><%= text %></code>
        </pre>
    </div>
    <script>
        function copyTextToClipboard(){
            var copyText = `<%= text %>`;
            navigator.clipboard.writeText(copyText);
            alert("Copied the text!");
        }
    </script>
</body>

</html>